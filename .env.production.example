# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# Frontend Environment Variables
VITE_API_BASE_URL=https://your-domain.vercel.app/api
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_key_here

# Backend Environment Variables (Set in Vercel Dashboard)
NODE_ENV=production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/reservio-production
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d
BCRYPT_ROUNDS=12

# Rate Limiting (Production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe Production Keys
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret

# Google AI
GEMINI_API_KEY=your_production_gemini_api_key

# CORS Origins (Production URLs)
ALLOWED_ORIGINS=https://your-domain.vercel.app,https://www.your-domain.com

# Security
COOKIE_SECRET=your-production-cookie-secret-minimum-32-characters

# Logging
LOG_LEVEL=info